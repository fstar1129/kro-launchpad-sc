        //         break;
        //     } else {
        //         newDepositsByWithdrawal[j] = depositsByWithdrawalAddress[withdrawalAddress][j];
        //     }
        // }
        // depositsByWithdrawalAddress[withdrawalAddress] = newDepositsByWithdrawal;

        // Remove depositId from tokens mapping
